
<%=render 'shared/errors', obj: @task%>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@task, :html => {class: "form-horizontal", role: "form"}) do |f|%>

     <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :title %>
       </div>
       
       <div class="col-sm-8">   
        <%= f.text_field :title, class: "form-control", placeholder: "Title of the Task", autofocus: true %>
        <%= f.hidden_field :user_id %>
       </div>
     </div>  

    <div class="form-group">
       <div class="control-label col-sm-2">
        <%= f.label :Description%>
       </div>
        
       <div class="col-sm-8"> 
        <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Description of task" %>
       </div>
    </div>   

    <div class="form-group">
       <div class="control-label col-sm-2">  
        <%= f.label :company_name %>
       </div>

       <div class="col-sm-8">  
        <%= f.text_field :company_name, class: "form-control", placeholder: "Company Name" %> 
       </div>
    </div>    
     

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :location %>
      </div>
      
      <div class="col-sm-8">   
        <%= f.text_field :location, class: "form-control", placeholder: "Location"%>
      </div>
    </div>  
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :estimated_date %>
      </div>
      <div class="col-sm-8">
        <%= f.datetime_local_field :estimated_date %>
      </div>  
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :category %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:category_id, options_for_categories)%>
      </div>  
    </div>

    <div class="form-group">
       <div class="col-sm-offset-2 col-sm-8">   
        <%= f.submit(@task.new_record? ? 'Add Task' : 'Update Task', class: "btn btn-primary btn-lg") %>
       </div>
    </div>      

    <% end %>
   </div>
 </div>   