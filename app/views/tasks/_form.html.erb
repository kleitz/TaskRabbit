
<%=render 'shared/errors', obj: @task%>

<%= form_with model: @task, local: true do |f|%>
  <p>
    <%= f.label :title %> <br />
    <%= f.text_field :title, size: "10x8" %> <br />  
    <%= f.hidden_field :user_id %>
  </p>

  <p>
    <%= f.label :description %> <br />
    <%= f.text_area :description, size: "60x8"%> <br />  
  </p>

  <p>
    <%= f.label :company_name %> <br />
    <%= f.text_field :company_name, size: "10x8" %> <br />  
  </p>

  <p>
    <%= f.label :location %> <br />
    <%= f.text_field :location, size: "10x8" %> <br />  
  </p>

  <p>
    <%= f.label :estimated_date %> <br />
    <%= f.datetime_local_field :estimated_date %><br />
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.select(:category_id, options_for_categories)%>
  </p>

  <p>
    <%= f.submit(@task.new_record? ? 'Add Task' : 'Update Task', class: "btn btn-primary btn-lg") %>  
  </p>

<% end %>