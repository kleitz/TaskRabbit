<h1 style="background-color: #FAF0E6">~ Add New Task ~</h1>

<% if @task.errors.any? %>
 <h3>Following errors prevented for task getting created..</h3>
 <ul>
  <% @task.errors.full_messages.each do |msg|%>
    <li style="color: red"><%= msg %></li>
  <%end%>
 </ul>
<%end%>

<%= form_with model: @task do |f|%>
  <h3>
    <%= f.label :title %> <br />
  	<%= f.text_field :title, size: "10x8" %> <br />	 
  </h3>

  <h3>
    <%= f.label :description %> <br />
  	<%= f.text_area :description, size: "60x8"%> <br />	 
  </h3>

  <h3>
    <%= f.label :company_name %> <br />
    <%= f.text_field :company_name, size: "10x8" %> <br />  
  </h3>

  <h3>
    <%= f.label :location %> <br />
    <%= f.text_field :location, size: "10x8" %> <br />  
  </h3>

  <h3>
    <%= f.label :estimated_date %> <br />
    <%= f.datetime_local_field :estimated_date %><br />
  </h3>


  <h3>
    <%= f.label :category %><br>
    <%= select_tag(:category_id, options_for_select(@categories))%>
  </h3>

  <h3>
    <%= f.submit "Create" %>  
  </h3>

<% end %> <h2> <center><%= link_to "Go home", tasks_path %></center> </h2>

