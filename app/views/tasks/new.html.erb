<h3 style="background-color: #FAF0E6">
 <center><b>~ Add New Task ~</b></center>
</h3>

<% if @task.errors.any? %>
 <p>Following errors prevented for task getting created..</p>
 <ul>
  <% @task.errors.full_messages.each do |msg|%>
    <li style="color: red"><%= msg %></li>
  <%end%>
 </ul>
<%end%>

<%= form_with model: @task do |f|%>
  <p>
    <%= f.label :title %> <br />
  	<%= f.text_field :title, size: "10x8" %> <br />	 
  </p>

  <p>
    <%= f.label :description %> <br />
  	<%= f.text_area :description, size: "60x8"%> <br />	 
  </p>

  <p>
    <%= f.label :company_name %> <br />
    <%= f.text_field :company_name, size: "10x8" %> <br />  
  </p>

  <p>
    <%= f.label :location %> <br />
    <%= f.text_field :location, size: "10x8" %> <br />  
  </p>

  <p>
    <%= f.label :estimated_date %> <br />
    <%= f.datetime_local_field :estimated_date %><br />
  </p>


  <p>
    <%= f.label :category %><br>
    <%= select_tag(:category_id, options_for_select(@categories))%>
  </p>

  <p>
    <%= f.submit "Create" %>  
  </p>

<% end %>

 <h4>
  <center><%= link_to "Go home", tasks_path %></center> 
 </h4>

