<h2 align="center"><b>Edit Profile</b></h2>


<%=render 'shared/errors', obj: @current_user%>

<div class="row">
  <div class="col-xs-12">
  <%= form_for(:current_user, url: sessions_path, method: 'patch',:html => {class: "form-horizontal", role: "form"}) do |f| %>
        
      <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :profile_image%>
       </div>
       <div class="col-sm-8">   
        <%=f.file_field :profile_image, class: "form-group"%>
       </div>
      </div>

      <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :name %>
       </div>
       <div class="col-sm-8">   
        <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
       </div>
      </div>

      <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :email %>
       </div>
       <div class="col-sm-8">   
        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
       </div>
      </div> 

      <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :role %>
       </div>
       <div class="col-sm-8">   
        <%= f.select(:role, [["Contractor","Contractor"],["Tasker","Tasker"]])%>
       </div>
      </div> 

      <div class="form-group">
       <div class="control-label col-sm-2">
           <%= f.label :phone %>
       </div>
       <div class="col-sm-8">   
        <%= f.text_field :phone, class: "form-control", placeholder: "Contact No.", autofocus: true %>
       </div>
      </div> 

      <div class="form-group">
       <div class="control-label col-sm-2">
          <%= f.label :address %>
       </div>
       <div class="col-sm-8">   
        <%= f.text_field :address, class: "form-control", placeholder: "Address", autofocus: true %>
       </div>
      </div> 
      
      <div class="form-group">
       <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit "Update", class: "btn btn-primary btn-md" %>
       </div>
      </div>
  <% end %>
</div>
</div>
  
<h4 align="center"><%=link_to "Go Back", sessions_path%> </h4>