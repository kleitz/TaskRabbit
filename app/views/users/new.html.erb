
  <h2>Signup!</h2>
  
  <%=render 'shared/errors', obj: @user%>

  <%= form_for :user, url: users_path do |f| %>
     
    <p> 
    	Name: <%= f.text_field :name %> </br> 
    </p>

    <p>
    	Email: <%= f.text_field :email %> </br>
    </p>	
    
    <p>
    	Password: <%= f.password_field :password_digest %> </br>
    </p>

    <p>
      Role: <%= f.select(:role, [["Contractor","Contractor"],["Tasker","Tasker"]]) %>
    </p>

    <p>
      Phone: <%= f.text_field :phone %>
    </p>

    <p>
      Address: <%= f.text_field :address %>
    </p>
    
    <p>
      <%= f.submit "Submit" %>
    </p>

    <center>
      <h4>
        <%=link_to "Go Back", root_path%>
      </h4>
    </center>

  <% end %>
