<center>
    <h4 style="color: green">
      <%=p "Contact Information of the #{@task.title}"%>
    </h4>
 
   <% if @task.user.profile_image.attached? %>
     <div class='text center'>
      <img src="<%=url_for(@task.user.profile_image)%>" class="img-thumbnail" alt=".."  width="150" height="100">
     </div>
   <% end %>


    <p>
      <strong>Email:</strong>
      <%= @task.user.email %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @task.user.name %>
    </p>


    <p>
      <strong>Address:</strong>
      <%= @task.user.address %>
    </p>

    <p>
      <strong>Contact no:</strong>
      <%= @task.user.phone %>
    </p>

    <h4>
      <%=link_to 'Go Back', task_path%>
    </h4>
</center>    
