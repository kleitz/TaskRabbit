<center>
    <h4 style="color: green">
      <%= current_user == @user ? "Your Profile" : "#{@user.name}'s Profile" %>
    </h4>

   <%=render 'shared/image', obj: @user %>
    
    <%if @user.main_admin?%>
      <h2 style="color: green">
        <b>Main Admin</b>
      </h2>
    <%elsif @user.admin?%>
      <h2 style="color: green">
        <b>Admin</b>
      </h2>
    <%end%> 

    <h4>
      <strong>Email:</strong>
      <%= @user.email %>
    </h4>

    <h4>
      <strong>Name:</strong>
      <%= @user.name %>
    </h4>

    <h4>
      <strong>Role:</strong>
      <%= @user.role %>
    </h4>

    <h3>
        <% if current_user == @user %>
        <%=link_to 'Edit Profile', edit_user_registration_path %>|
        <%end%>
        <%=link_to 'Go Back', users_path%>
    </h3>
    
</center>

<h2 align="center">
  <b><%="#{@user.name}'s Tasks..."%></b>
</h2>

<%= render 'shared/pagination', obj: @user_tasks %>

<%= render 'tasks/task', obj: @user_tasks %>

<%= render 'shared/pagination', obj: @user_tasks %>

