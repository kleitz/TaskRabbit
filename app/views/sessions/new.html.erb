
  <h2>Login</h2>

  <%= form_tag sessions_path do %>

    <p> 
       Email: <%= text_field_tag :email %>
    </p>

    <p>
      Password: <%= password_field_tag :password_digest %>
    </p>

    <p>
      <%= submit_tag "Login", class: "btn btn-primary btn-md"%>
    </p>

    <center>
      <h4>
        <%=link_to "Go Back", root_path%>
      </h4>
    </center>
    
  <% end %>

