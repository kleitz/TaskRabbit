<h2>Login</h2>

<%= form_tag sessions_path do %>

  <p> 
     Email: <%= text_field_tag :email %>
  </p>

  <p>
    Password: <%= password_field_tag :password_digest %>
  </p>

  <p>
    <%= submit_tag "Submit" %>
  </p>

  <center>
    <h3> <%= link_to 'Signup', new_user_path %> </h3>
  </center>
  
<% end %>