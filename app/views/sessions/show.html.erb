<center>
    <h4 style="color: green">
      <%=p "Hi! #{current_user.name}, its your details.. "%>
    </h4>

    <% if current_user.profile_image.attached? %>
     <div class='text center'>
      <img src="<%=url_for(current_user.profile_image)%>" class="img-thumbnail" alt=".."  width="150" height="100">
     </div> 
    <% end %>

    <p>
      <strong>Email:</strong>
      <%= current_user.email %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= current_user.name %>
    </p>

    <p>
      <strong>Role:</strong>
      <%= current_user.role %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= current_user.address %>
    </p>

    <p>
      <strong>Contact no:</strong>
      <%= current_user.phone %>
    </p>

    <h4>
        <%=link_to 'Edit Details', edit_sessions_path%> | <%=link_to 'Go Home', tasks_path%>
    </h4>
    
</center>

<h2 style="background-color: #FFE4E1">
  Your Tasks...
</h2>  

<%= render 'tasks/task', obj: current_user.tasks %>


